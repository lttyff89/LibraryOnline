@{
    Layout = "_Layout";
    ViewData["Title"] = "Welcome";
}

<section class="section-intro">
    <!-- Set the background image to the library image -->
    <div class="bg-image h-100" style="background-image: url('/images/library.jpg');">
        <div class="mask d-flex align-items-center h-100">
            <div class="container-xl text-center">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card shadow-2-strong mask-custom" style="background-color: rgba(255, 255, 255, 0.8);">
                            <div class="card-body">
                                <!-- Welcome Message -->
                                <h1 class="text-center text-primary mb-4">Welcome to the Library</h1>
                                <p class="lead text-center">
                                    Discover a world of knowledge and explore thousands of books.
                                </p>
                                <a href="@Url.Action("Index", "Books")" class="btn btn-primary">Explore Books</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Author Information -->
<section class="author-info text-center mt-5">
    <p class="text-muted">Page created by: <strong>Arletty Fernandez Fustes</strong></p>
    <p class="text-muted">Visit the library and discover more amazing books!</p>
</section>